<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<div class="jumbotron">
  <h1>Listing movies</h1>
</div>
<table class="table table-condensed">
  <tr>
    <th>CoverImage</th>
    <th>Title</th>
    <th>Description</th>
    <th>Movie length</th>
    <th>Director</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= image_tag movie.image.url(:medium), class: "col-md-4"%></td>
    <td><%= movie.title %></td>
    <td><%= movie.description %></td>
    <td><%= movie.movie_length %></td>
    <td><%= movie.director %></td>
    <td><%= movie.rating %></td>
    <td><%= link_to 'Show', movie, class: "btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-warning" %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Movie', new_movie_path, class: "btn btn-primary" %>
